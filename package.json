
name: Build Android App
on:
  push:
    branches: [ main, master ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install Dependencies
        run: npm install --no-package-lock

      - name: Build Web Project
        run: npm run build

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '17'

      - name: Generate Mobile Assets
        run: |
          # Check if icon.png exists in root, otherwise try to use branding logo if possible
          # Standard practice is icon.png in root
          if [ -f "icon.png" ]; then
            npx capacitor-assets generate --android
          else
            echo "⚠️ No icon.png found in root. App will use default Android icon."
          fi

      - name: Build Android with Capacitor
        run: |
          npx cap add android || true
          npx cap sync android
          cd android && ./gradlew assembleDebug && ./gradlew bundleRelease

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: app-debug-apk
          path: android/app/build/outputs/apk/debug/app-debug.apk

      - name: Upload AAB (Production)
        uses: actions/upload-artifact@v4
        with:
          name: app-release-aab
          path: android/app/build/outputs/bundle/release/app-release.aab
